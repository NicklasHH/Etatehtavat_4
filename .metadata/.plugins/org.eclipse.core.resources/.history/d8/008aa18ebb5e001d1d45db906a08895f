th {
	background-color: #4CAF50;
	color: white;
	height: 40px;
	text-align: left;
}

td {
	width: 100px;
	text-align: left;
}

table tr:nth-child(odd) td {
	background-color: #ffffff;
}

table tr:nth-child(even) td {
	background-color: #e5e5e5;
}

.countTable table tr :first-child {
	text-align: center;
} /* eka */
.countTable table tr :first-child+tr {
	background:red
	text-align: center;
} /* toka */



.countTable table tr td:first-child {
	background:red
	text-align: left;
} /* eka */
.countTable table tr td:first-child+td {
	text-align: right;
} /* toka */
.countTable table tr td:first-child+td+td {
	text-align: left;
} /* third column */
.countTable table tr td:first-child+td+td+td {
	text-align: left;
} /* fourth column */